<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/blackone"
    tools:context=".CreateMeasurableHabit">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/TopBox"
        android:layout_width="405dp"
        android:layout_height="111dp"
        android:background="#040007"
        android:backgroundTint="#0B0606"
        android:contentDescription="@string/_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/toponefrag" />

    <TextView
        android:id="@+id/CreateHabitText"
        android:layout_width="146dp"
        android:layout_height="42dp"
        android:gravity="center_vertical"
        android:text="@string/create_habit"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FCF7F7"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/TopBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.27"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/TopBox"
        app:layout_constraintVertical_bias="0.51" />

    <ImageView
        android:id="@+id/backbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/back"
        app:layout_constraintBottom_toBottomOf="@+id/TopBox"
        app:layout_constraintEnd_toStartOf="@+id/CreateHabitText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backarrow" />

    <ImageView
        android:id="@+id/SaveBox"
        android:layout_width="87dp"
        android:layout_height="38dp"
        app:layout_constraintBottom_toBottomOf="@+id/TopBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/CreateHabitText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.534"
        app:srcCompat="@drawable/savebutton"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/SaveText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="@string/save"
        android:textColor="#81C784"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/SaveBox"
        app:layout_constraintEnd_toEndOf="@+id/SaveBox"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="@+id/SaveBox"
        app:layout_constraintTop_toTopOf="@+id/SaveBox" />

    <ImageView
        android:id="@+id/namebox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:foregroundGravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TopBox"
        app:srcCompat="@drawable/namebox"
        android:contentDescription="TODO" />

    <ImageView
        android:id="@+id/Colorbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.419"
        app:layout_constraintStart_toEndOf="@+id/namebox"
        app:layout_constraintTop_toBottomOf="@+id/TopBox"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/colorbox"
        android:contentDescription="TODO" />

    <ImageView
        android:id="@+id/QuestionBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.194"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/namebox"
        app:layout_constraintVertical_bias="0.004"
        app:srcCompat="@drawable/questionbox" />

    <ImageView
        android:id="@+id/FrequencyBox"
        android:layout_width="345dp"
        android:layout_height="72dp"
        android:layout_marginTop="24dp"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/QuestionBox"
        app:layout_constraintVertical_bias="0.289"
        app:srcCompat="@drawable/frequencybox" />

    <ImageView
        android:id="@+id/ReminderBox"
        android:layout_width="349dp"
        android:layout_height="70dp"
        android:layout_marginTop="24dp"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.209"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FrequencyBox"
        app:layout_constraintVertical_bias="0.069"
        app:srcCompat="@drawable/reminderbox"
        android:contentDescription="TODO" />

    <ImageView
        android:id="@+id/NoteBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.196"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ReminderBox"
        app:layout_constraintVertical_bias="0.142"
        app:srcCompat="@drawable/notesbox" />

    <TextView
        android:id="@+id/nametext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:backgroundTint="#1E1E1E"
        android:text=" Name"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/namebox"
        app:layout_constraintEnd_toEndOf="@+id/namebox"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TopBox"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/ColorPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/Colorbox"
        app:layout_constraintEnd_toEndOf="@+id/Colorbox"
        app:layout_constraintStart_toStartOf="@+id/Colorbox"
        app:layout_constraintTop_toTopOf="@+id/Colorbox"
        app:srcCompat="@drawable/colorboxinside" />

    <TextView
        android:id="@+id/Questiontext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/QuestionBox"
        app:layout_constraintEnd_toEndOf="@+id/QuestionBox"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="@+id/QuestionBox"
        app:layout_constraintTop_toBottomOf="@+id/namebox"
        app:layout_constraintVertical_bias="0.20999998" />

    <TextView
        android:id="@+id/frequency_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Frequency"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/FrequencyBox"
        app:layout_constraintEnd_toEndOf="@+id/FrequencyBox"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="@+id/FrequencyBox"
        app:layout_constraintTop_toBottomOf="@+id/Targetbox"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/ReminderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reminder"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/ReminderBox"
        app:layout_constraintEnd_toEndOf="@+id/ReminderBox"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintStart_toStartOf="@+id/ReminderBox"
        app:layout_constraintTop_toBottomOf="@+id/FrequencyBox"
        app:layout_constraintVertical_bias="0.27999997" />

    <TextView
        android:id="@+id/NotesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notes"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/NoteBox"
        app:layout_constraintEnd_toEndOf="@+id/NoteBox"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="@+id/NoteBox"
        app:layout_constraintTop_toBottomOf="@+id/ReminderBox"
        app:layout_constraintVertical_bias="0.26" />

    <TextView
        android:id="@+id/Colortext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/Colorbox"
        app:layout_constraintEnd_toEndOf="@+id/Colorbox"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="@+id/Colorbox"
        app:layout_constraintTop_toBottomOf="@+id/TopBox"
        app:layout_constraintVertical_bias="0.314" />

    <EditText
        android:id="@+id/name_edittext"
        android:layout_width="236dp"
        android:layout_height="48dp"
        android:ems="10"
        android:foregroundGravity="center"
        android:hint="e.g.   Exercise"

        android:inputType="textPersonName"

        android:textColorHint="#A1887F"
        app:layout_constraintBottom_toBottomOf="@+id/namebox"
        app:layout_constraintEnd_toEndOf="@+id/namebox"
        app:layout_constraintStart_toStartOf="@+id/namebox"
        app:layout_constraintTop_toTopOf="@+id/namebox" />

    <EditText
        android:id="@+id/question_edittext"
        android:layout_width="314dp"
        android:layout_height="42dp"
        android:ems="10"
        android:foregroundGravity="center"
        android:hint="e.g.   Did you exercise today?"
        android:inputType="textPersonName"
        android:textColorHint="#454141"
        app:layout_constraintBottom_toBottomOf="@+id/QuestionBox"
        app:layout_constraintEnd_toEndOf="@+id/QuestionBox"
        app:layout_constraintHorizontal_bias="0.366"
        app:layout_constraintStart_toStartOf="@+id/QuestionBox"
        app:layout_constraintTop_toTopOf="@+id/QuestionBox"
        app:layout_constraintVertical_bias="0.567"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/Target_EditText"
        android:layout_width="314dp"
        android:layout_height="48dp"
        android:ems="10"
        android:foregroundGravity="center"
        android:hint="e.g.  15"
        android:inputType="textPersonName"

        android:textColorHint="#454141"
        app:layout_constraintBottom_toBottomOf="@+id/Targetbox"
        app:layout_constraintEnd_toEndOf="@+id/Targetbox"
        app:layout_constraintStart_toStartOf="@+id/Targetbox"
        app:layout_constraintTop_toTopOf="@+id/Targetbox" />

    <EditText
        android:id="@+id/frequency_edittext"
        android:layout_width="314dp"
        android:layout_height="48dp"
        android:ems="10"
        android:foregroundGravity="center"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/FrequencyBox"
        app:layout_constraintEnd_toEndOf="@+id/FrequencyBox"
        app:layout_constraintHorizontal_bias="0.612"
        app:layout_constraintStart_toStartOf="@+id/FrequencyBox"
        app:layout_constraintTop_toTopOf="@+id/FrequencyBox"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/reminder_edittext"
        android:layout_width="314dp"
        android:layout_height="48dp"
        android:ems="10"
        android:foregroundGravity="center"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/ReminderBox"
        app:layout_constraintEnd_toEndOf="@+id/ReminderBox"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/ReminderBox"
        app:layout_constraintTop_toTopOf="@+id/ReminderBox"
        app:layout_constraintVertical_bias="0.464"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/notes_text"
        android:layout_width="314dp"
        android:layout_height="48dp"
        android:ems="10"
        android:foregroundGravity="center"
        android:hint="(Optional)"
        android:inputType="textPersonName"
        android:textColorHint="#454141"
        app:layout_constraintBottom_toBottomOf="@+id/NoteBox"
        app:layout_constraintEnd_toEndOf="@+id/NoteBox"
        app:layout_constraintHorizontal_bias="0.548"
        app:layout_constraintStart_toStartOf="@+id/NoteBox"
        app:layout_constraintTop_toTopOf="@+id/NoteBox"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/Targetbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toTopOf="@+id/FrequencyBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.177"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/QuestionBox"
        app:srcCompat="@drawable/targetbox" />

    <TextView
        android:id="@+id/TargetText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Target"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/Targetbox"
        app:layout_constraintEnd_toEndOf="@+id/Targetbox"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="@+id/Targetbox"
        app:layout_constraintTop_toBottomOf="@+id/QuestionBox"
        app:layout_constraintVertical_bias="0.19" />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>