<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:outlineSpotShadowColor="@color/white"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/blackone"
        android:id="@+id/linear_layout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blackone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="117dp"
                android:background="#393838"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/stats"
                    android:layout_width="69dp"
                    android:layout_height="65dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="13dp"
                    android:layout_marginBottom="45dp"
                    android:contentDescription="hcheckbox"
                    app:srcCompat="@drawable/stats_icon" />

                <TextView
                    android:id="@+id/habitname"
                    android:layout_width="203dp"
                    android:layout_height="29dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="167dp"
                    android:layout_marginBottom="81dp"
                    android:text="TextView"
                    android:textColor="#FF76D1FF" />

                <TextView
                    android:id="@+id/show_frequency"
                    android:layout_width="265dp"
                    android:layout_height="31dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="39dp"
                    android:layout_marginEnd="105dp"
                    android:layout_marginBottom="47dp"
                    android:text="TextView"
                    android:textColor="#da68a0" />

                <TextView
                    android:id="@+id/show_type"
                    android:layout_width="73dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="225dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="87dp"
                    android:layout_marginBottom="85dp"
                    android:text="TextView"
                    android:textColor="#cbd18f" />

                <LinearLayout
                    android:layout_width="117dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="47dp"
                    android:layout_marginTop="78dp"
                    android:layout_marginEnd="211dp"
                    android:layout_marginBottom="14dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_baseline_delete_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="#d72631"
                        android:layout_marginStart="5dp"
                        android:text="Delete" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="117dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="250dp"
                    android:layout_marginTop="77dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="15dp"
                    android:outlineProvider="bounds">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/edit_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:text="Edit"
                        android:textColor="#a2d5c6" />


                </LinearLayout>


            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>