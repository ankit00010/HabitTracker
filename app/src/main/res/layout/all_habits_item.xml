<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="132dp"
            >


            <androidx.cardview.widget.CardView
                android:id="@+id/imageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="35dp"
                app:cardCornerRadius="60dp"

                >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sleep"
                    tools:ignore="ContentDescription" />


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/habitname"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/imageView"
                android:gravity="center"
                android:text="Health"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/show_frequency"
                android:layout_width="45dp"
                android:layout_height="26dp"
                android:layout_alignTop="@id/imageView"
                android:layout_marginStart="20sp"
                android:layout_marginTop="-35dp"
                android:text="Tue"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/show_type"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView"
                android:layout_marginTop="10dp"
                android:text="\t\tMeasurable"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/edit"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:layout_marginStart="138dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/habitname"
                android:src="@drawable/edit"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/stats"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/habitname"
                android:src="@drawable/stats"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/delete"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:layout_below="@id/edit"
                android:layout_marginStart="73dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="-264dp"
                android:layout_toEndOf="@id/habitquestion"
                android:src="@drawable/remove"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/habitquestion"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_below="@id/habitname"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/imageView"
                android:text="How many hours I slept?"
                android:textSize="15sp" />




        </RelativeLayout>



</androidx.cardview.widget.CardView>