<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:outlineSpotShadowColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:background="@color/white"

            >


            <androidx.cardview.widget.CardView
                android:id="@+id/imageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="35dp"
                app:cardCornerRadius="60dp"

                >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sleep" />


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/habitname"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/imageView"
                android:gravity="center"
                android:text="Health"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/show_frequency"
                android:layout_width="45dp"
                android:layout_height="26dp"
                android:layout_alignTop="@id/imageView"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="-35dp"
                android:text="Tue"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/show_type"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView"
                android:layout_marginTop="10dp"
                android:text="\t\tMeasurable"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/edit"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:layout_marginLeft="138dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/habitname"
                android:src="@drawable/edit" />

            <ImageView
                android:id="@+id/stats"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/habitname"
                android:src="@drawable/stats" />

            <ImageView
                android:id="@+id/delete"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:layout_below="@id/edit"
                android:layout_marginLeft="73dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="-264dp"
                android:layout_toRightOf="@id/habitquestion"
                android:src="@drawable/remove" />

            <TextView
                android:id="@+id/habitquestion"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_below="@id/habitname"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/imageView"
                android:text="How many hours I slept?"
                android:textSize="15sp" />




        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>