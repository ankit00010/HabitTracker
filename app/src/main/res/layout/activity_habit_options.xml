<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackone"
    tools:context=".HabitOptions">


    <TextView
        android:id="@+id/CreateHabitText"
        android:layout_width="338dp"
        android:layout_height="64dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="651dp"
        android:gravity="center|top"
        android:text="How do you want to evaluate your progress?"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/teal_700"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/option1"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginBottom="552dp"
        android:background="@drawable/rounded_edges"
        android:contentDescription="@string/option1"
        android:gravity="center"
        android:requiresFadingEdge="horizontal|vertical|none"
        android:text="@string/option1"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/BottomBox"
        android:layout_width="413dp"
        android:layout_height="52dp"
        android:background="#040007"
        android:foreground="#000000"
        android:contentDescription="@string/_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.998"
        app:srcCompat="@drawable/toponefrag" />

    <TextView
        android:id="@+id/back_text"
        android:layout_width="94dp"
        android:layout_height="50dp"
        android:layout_marginBottom="3dp"
        android:gravity="center"
        android:text="BACK"
        android:textColor="@color/orange"
        android:background="#0B0606"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/textView9"
        android:layout_width="346dp"
        android:layout_height="37dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/option1note"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/BottomBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="342dp"
        android:layout_height="37dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:text="@string/option2note"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/BottomBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="348dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:text="@string/option3note"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/BottomBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option3"
        app:layout_constraintVertical_bias="0.015" />

    <TextView
        android:id="@+id/option3"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="22dp"
        android:background="@drawable/rounded_edges"
        android:contentDescription="@string/option1"
        android:gravity="center"
        android:requiresFadingEdge="horizontal|vertical|none"
        android:text="@string/option3"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/BottomBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option2"
        app:layout_constraintVertical_bias="0.202" />

    <TextView
        android:id="@+id/option2"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginBottom="88dp"
        android:background="@drawable/rounded_edges"
        android:gravity="center"
        android:text="@string/option2"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/BottomBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option1"
        app:layout_constraintVertical_bias="0.194" />


</androidx.constraintlayout.widget.ConstraintLayout>